{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["dom", "dom.iterable", "ES2020"],
        "baseUrl": "./",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "resolveJsonModule": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true,
        "isolatedModules": false,
        "noEmit": true,
        "jsx": "react-jsx",
        "outDir": "dist/app"
    },
    "include": ["src"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
